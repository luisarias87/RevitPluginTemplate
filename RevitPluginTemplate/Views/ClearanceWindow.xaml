<Window x:Class="RevitPluginTemplate.Views.ClearanceWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitPluginTemplate.Views"
             mc:Ignorable="d" SizeToContent="WidthAndHeight"
               Loaded="On_Loaded">
    <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="35"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Row="0">
      <TextBox Text="Cable Tray Clearance" Margin="2"/>
      <GroupBox Header="Cable Tray Clearance Example">
        <ComboBox x:Name="CTComboBox"></ComboBox>
      </GroupBox>
    </StackPanel>
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button  Margin="0,0,10,0"  Content="Cancel" Width="60" Height="20" Click="CloseWindow">
      </Button>
      <Button   Margin="0,0,10,0" Content="Apply" Width="60" Height="20" Click="CloseWindow"></Button>
    </StackPanel>
    </Grid>
</Window>
